<h1>Order Confirmation</h1>

<p>Order ID: <%= @order.id %></p>
<p>Total Price: <%= number_to_currency(@order.total_price) %> </p>
<p>Status: <%= @order.status %></p>

<h3>Order Items</h3>
<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_products.each do |item| %>
      <tr>
        <td><%= item.product.title %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.product.price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Products', products_path, class: "btn btn-primary" %>
